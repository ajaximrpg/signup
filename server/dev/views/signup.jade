div.col-lg-offset-4.col-lg-4
  div.panel(ng-controller="signupController")
    div.panel-heading Sign up
    form(name="form", ng-submit="signup()")
      div.form-group
        label.control-label(for="first") First name
        input.form-control(type="text", ng-model="first", name="first", id="first", placeholder="Emmet", required, autofocus)
        span.help-block(ng-show="form.first.$dirty && form.first.$error.required") Type your first name
        span.help-block(ng-show="form.first.$dirty && form.first.$error.invalidChars") Your first name may not contain any non-url-safe characters
      div.form-group
        label.control-label(for="last") Last name
        input.form-control(type="text", ng-model="last", name="last", id="last", placeholder="Brickowski", required)
        span.help-block(ng-show="form.last.$dirty && form.last.$error.required") Type your last name
        span.help-block(ng-show="form.last.$dirty && form.last.$error.invalidChars") Your last name may not contain any non-url-safe characters
      div.form-group
        label.control-label(for="email") Email
        input.form-control(type="email", ng-model="email", name="email", id="email", placeholder="emmet@bricksburg.com", required)
        span.help-block(ng-show="form.email.$dirty && form.email.$error.email") Email is invalid
        span.help-block(ng-show="form.email.$dirty && form.email.$error.alreadySignedUp") You have already signed up
      div.form-group
        label.control-label(for="password") Password
        input.form-control(type="password", name="password", id="password", ng-model="password", required, match="verification")
        span.help-block(ng-show="form.password.$dirty && form.password.$error.required") Please enter a password
      div.form-group
        label.control-label(for="verification") Repeat password
        input.form-control(type="password", name="verification", id="verification", ng-model="verification", required, match="password")
        span.help-block(ng-show="form.verification.$dirty && form.verification.$error.required") Please repeat your password
        span.help-block(ng-show="form.verification.$dirty && form.verification.$error.match && !form.verification.$error.required") Passwords don't match
      if error
        div.alert #{error}
      div.btn-toolbar
        div.btn-group
          input.btn.btn-primary(type="submit", value="Sign up", ng-disabled="form.$invalid")
        div.btn-group
          input.btn.btn(type="button", ng-click="cancel()", value="Cancel")
